/* ============================================
   LOOKOUT - Modern UI Styles
   Enhanced CSS-only beautification
   ============================================ */

/* CSS Variables for Design System - Dark Theme */
:root {
  /* Color Palette */
  --primary-400: #60a5fa;
  --primary-500: #3b82f6;
  --primary-600: #2563eb;
  --primary-700: #1d4ed8;
  --primary-50: #eff6ff;
  --primary-100: #dbeafe;

  --success-400: #34d399;
  --success-500: #10b981;
  --success-600: #059669;
  --success-50: #ecfdf5;

  --warning-400: #fbbf24;
  --warning-500: #f59e0b;
  --warning-600: #d97706;
  --warning-50: #fffbeb;

  --danger-400: #f87171;
  --danger-500: #ef4444;
  --danger-600: #dc2626;
  --danger-50: #fef2f2;

  /* Dark Theme Grays */
  --dark-50: #f8fafc;
  --dark-100: #f1f5f9;
  --dark-200: #e2e8f0;
  --dark-300: #cbd5e1;
  --dark-400: #94a3b8;
  --dark-500: #64748b;
  --dark-600: #475569;
  --dark-700: #334155;
  --dark-800: #1e293b;
  --dark-850: #172033;
  --dark-900: #0f172a;
  --dark-950: #020617;

  /* Backgrounds */
  --bg-primary: #0f172a;
  --bg-secondary: #1e293b;
  --bg-tertiary: #334155;
  --bg-card: rgba(30, 41, 59, 0.8);
  --bg-card-hover: rgba(51, 65, 85, 0.8);

  /* Text Colors */
  --text-primary: #f1f5f9;
  --text-secondary: #cbd5e1;
  --text-tertiary: #94a3b8;
  --text-muted: #64748b;

  /* Borders */
  --border-primary: rgba(148, 163, 184, 0.2);
  --border-secondary: rgba(148, 163, 184, 0.1);

  /* Shadows - Enhanced for dark theme */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
  --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.4), 0 1px 2px 0 rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.6), 0 10px 10px -5px rgba(0, 0, 0, 0.4);
  --shadow-glow: 0 0 20px rgba(59, 130, 246, 0.3);

  /* Border Radius */
  --radius-sm: 0.375rem;
  --radius: 0.5rem;
  --radius-md: 0.75rem;
  --radius-lg: 1rem;
  --radius-xl: 1.5rem;

  /* Transitions */
  --transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-fast: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ============================================
   Global Styles
   ============================================ */
* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: var(--bg-primary);
  color: var(--text-primary);
  line-height: 1.6;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  font-size: 1.125rem;
  color: var(--text-secondary);
  flex-direction: column;
  gap: 1rem;
}

.loading::after {
  content: '';
  width: 40px;
  height: 40px;
  border: 3px solid var(--dark-700);
  border-top-color: var(--primary-500);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.error {
  background: rgba(239, 68, 68, 0.1);
  color: var(--danger-400);
  padding: 1rem 1.25rem;
  border-radius: var(--radius-md);
  border-left: 4px solid var(--danger-500);
  border: 1px solid rgba(239, 68, 68, 0.2);
  font-size: 0.9375rem;
  margin: 1rem 0;
  backdrop-filter: blur(10px);
}

/* ============================================
   Buttons
   ============================================ */
button {
  border: none;
  border-radius: var(--radius-md);
  padding: 0.625rem 1.25rem;
  font-size: 0.9375rem;
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition);
  font-family: inherit;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  box-shadow: var(--shadow-sm);
}

button:active {
  transform: translateY(1px);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-600) 100%);
  color: white;
}

.btn-primary:hover:not(:disabled) {
  background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 100%);
  box-shadow: var(--shadow-md);
  transform: translateY(-1px);
}

.btn-secondary {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  border: 1px solid var(--border-primary);
}

.btn-secondary:hover:not(:disabled) {
  background: var(--dark-600);
  border-color: var(--border-primary);
}

.btn-danger {
  background: linear-gradient(135deg, var(--danger-500) 0%, var(--danger-600) 100%);
  color: white;
}

.btn-danger:hover:not(:disabled) {
  background: linear-gradient(135deg, var(--danger-600) 0%, #b91c1c 100%);
  box-shadow: var(--shadow-md);
  transform: translateY(-1px);
}

.btn-back {
  background: var(--bg-secondary);
  color: var(--text-secondary);
  border: 1px solid var(--border-primary);
}

.btn-back:hover:not(:disabled) {
  background: var(--bg-tertiary);
  border-color: var(--border-primary);
}

button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none !important;
}

/* ============================================
   Authentication Pages
   ============================================ */
.auth-page {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 1rem;
}

.auth-container {
  background: white;
  padding: 2.5rem;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
  width: 100%;
  max-width: 420px;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.auth-container h1 {
  text-align: center;
  background: linear-gradient(135deg, var(--primary-500), var(--primary-700));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0 0 0.5rem;
  font-size: 2rem;
  font-weight: 700;
}

.auth-container h2 {
  text-align: center;
  margin: 0 0 2rem;
  color: var(--gray-600);
  font-size: 0.9375rem;
  font-weight: 400;
}

.auth-form {
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group label {
  margin-bottom: 0.5rem;
  font-weight: 500;
  color: var(--gray-700);
  font-size: 0.875rem;
}

.form-group input,
.form-group select,
input[type="text"],
input[type="email"],
input[type="password"],
input[type="url"],
input[type="number"],
select,
textarea {
  padding: 0.75rem 1rem;
  border: 1.5px solid var(--gray-300);
  border-radius: var(--radius-md);
  font-size: 0.9375rem;
  transition: var(--transition);
  font-family: inherit;
  background: white;
}

.form-group input:focus,
select:focus,
textarea:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 3px var(--primary-100);
}

.form-group input:hover,
select:hover,
textarea:hover {
  border-color: var(--gray-400);
}

.auth-link {
  text-align: center;
  margin-top: 1.5rem;
  font-size: 0.9375rem;
  color: var(--gray-600);
}

.auth-link a {
  color: var(--primary-600);
  text-decoration: none;
  font-weight: 600;
  transition: var(--transition);
}

.auth-link a:hover {
  color: var(--primary-700);
  text-decoration: underline;
}

/* ============================================
   Sessions Page
   ============================================ */
.sessions-page {
  min-height: 100vh;
  background: var(--gray-50);
}

.page-header {
  background: white;
  padding: 1.25rem 2rem;
  box-shadow: var(--shadow-sm);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--gray-200);
}

.page-header h1 {
  margin: 0;
  background: linear-gradient(135deg, var(--primary-500), var(--primary-700));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-size: 1.75rem;
  font-weight: 700;
}

.user-info {
  display: flex;
  gap: 1rem;
  align-items: center;
  color: var(--gray-600);
  font-size: 0.9375rem;
}

.page-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

.sessions-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.sessions-header h2 {
  color: var(--gray-800);
  font-size: 1.5rem;
  margin: 0;
  font-weight: 600;
}

.create-session-form {
  background: white;
  padding: 1.5rem;
  border-radius: var(--radius-lg);
  margin-bottom: 2rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  box-shadow: var(--shadow);
  border: 1px solid var(--gray-200);
}

.create-session-form input,
.create-session-form textarea,
.create-session-form select {
  flex: 1;
}

.create-session-form textarea {
  resize: vertical;
  min-height: 100px;
  line-height: 1.6;
}

.sessions-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.session-card {
  background: white;
  padding: 1.5rem;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: var(--transition);
  border: 1px solid var(--gray-200);
  cursor: pointer;
}

.session-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-300);
}

.session-info {
  flex: 1;
}

.session-info h3 {
  margin: 0 0 0.5rem;
  color: var(--gray-900);
  font-size: 1.125rem;
  font-weight: 600;
}

.session-meta {
  color: var(--gray-500);
  font-size: 0.875rem;
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.status-badge {
  display: inline-block;
  background: var(--warning-500);
  color: white;
  padding: 0.375rem 0.875rem;
  border-radius: var(--radius-xl);
  font-size: 0.8125rem;
  font-weight: 500;
  margin-top: 0.75rem;
  box-shadow: var(--shadow-sm);
}

.status-badge.success {
  background: var(--success-500);
}

.status-badge.error {
  background: var(--danger-500);
}

.empty-state {
  text-align: center;
  color: var(--gray-400);
  padding: 4rem 2rem;
  font-size: 1.125rem;
}

.empty-state::before {
  content: 'ðŸ“­';
  display: block;
  font-size: 3rem;
  margin-bottom: 1rem;
}

/* ============================================
   Session Detail Page
   ============================================ */
.session-detail-page {
  min-height: 100vh;
  background: var(--gray-50);
}

.session-category {
  color: var(--gray-500);
  margin: 0;
  text-transform: capitalize;
  font-size: 0.9375rem;
  font-weight: 500;
}

.session-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 2rem;
}

@media (max-width: 1024px) {
  .session-content {
    grid-template-columns: 1fr;
  }
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.25rem;
}

.section-header h2 {
  margin: 0;
  color: var(--gray-800);
  font-size: 1.25rem;
  font-weight: 600;
}

.requirements-section {
  grid-column: span 2;
  background: white;
  padding: 1.5rem;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow);
  border: 1px solid var(--gray-200);
}

@media (max-width: 1024px) {
  .requirements-section {
    grid-column: span 1;
  }
}

.requirements-hint {
  color: var(--gray-600);
  margin-top: 0;
  margin-bottom: 1rem;
  font-size: 0.875rem;
}

.requirements-form textarea {
  width: 100%;
  min-height: 100px;
  line-height: 1.6;
}

.requirements-actions {
  margin-top: 0.75rem;
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

/* ============================================
   Listings Section
   ============================================ */
.listings-section {
  background: white;
  padding: 1.5rem;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow);
  border: 1px solid var(--gray-200);
}

.add-listing-form {
  background: var(--gray-50);
  padding: 1.25rem;
  border-radius: var(--radius-md);
  margin-bottom: 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.875rem;
  border: 1px solid var(--gray-200);
}

.price-group {
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 0.75rem;
}

.listings-grid {
  display: grid;
  gap: 1.25rem;
}

.listing-card {
  border: 2px solid var(--gray-200);
  border-radius: var(--radius-lg);
  padding: 1.25rem;
  transition: var(--transition);
  background: white;
}

.listing-card:hover {
  border-color: var(--primary-300);
  box-shadow: var(--shadow-md);
}

.listing-card.evaluated {
  border-color: var(--primary-400);
  background: linear-gradient(to bottom, white 0%, var(--primary-50) 100%);
}

.listing-header {
  display: flex;
  justify-content: space-between;
  align-items: start;
  margin-bottom: 1rem;
}

.listing-header h3 {
  margin: 0;
  flex: 1;
  color: var(--gray-900);
  font-size: 1.125rem;
  font-weight: 600;
}

.listing-title-row {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.reevaluate-button {
  border: none;
  background: var(--gray-200);
  color: var(--gray-700);
  width: 36px;
  height: 36px;
  border-radius: 50%;
  font-size: 1.125rem;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: var(--transition);
  box-shadow: var(--shadow-sm);
}

.reevaluate-button:hover:not(:disabled) {
  background: var(--primary-500);
  color: white;
  transform: rotate(-15deg);
  box-shadow: var(--shadow-md);
}

.reevaluate-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.reevaluate-button.spinning {
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.deal-badge {
  padding: 0.375rem 0.875rem;
  border-radius: var(--radius-xl);
  font-size: 0.8125rem;
  font-weight: 600;
  white-space: nowrap;
  box-shadow: var(--shadow-sm);
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.deal-badge.score-0 { background: linear-gradient(135deg, #ef4444, #dc2626); color: white; }
.deal-badge.score-1 { background: linear-gradient(135deg, #f59e0b, #d97706); color: white; }
.deal-badge.score-2 { background: linear-gradient(135deg, #fbbf24, #f59e0b); color: var(--gray-900); }
.deal-badge.score-3 { background: linear-gradient(135deg, #84cc16, #65a30d); color: white; }
.deal-badge.score-4 { background: linear-gradient(135deg, #10b981, #059669); color: white; }
.deal-badge.pending-badge {
  background: var(--gray-300);
  color: var(--gray-700);
}

.listing-price {
  font-size: 1.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, var(--primary-600), var(--primary-700));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0.75rem 0;
}

.listing-url {
  color: var(--primary-600);
  text-decoration: none;
  font-size: 0.875rem;
  transition: var(--transition);
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
}

.listing-url:hover {
  color: var(--primary-700);
  text-decoration: underline;
}

.listing-marketplace {
  color: var(--gray-500);
  font-size: 0.875rem;
  margin: 0.625rem 0;
  font-weight: 500;
}

.listing-evaluation {
  margin-top: 1.25rem;
  padding-top: 1.25rem;
  border-top: 2px solid var(--gray-200);
}

.listing-description {
  background: var(--gray-50);
  border-radius: var(--radius-md);
  padding: 1rem;
  color: var(--gray-700);
  font-size: 0.9375rem;
  margin-top: 0.75rem;
  line-height: 1.6;
  border: 1px solid var(--gray-200);
}

.listing-actions {
  display: flex;
  gap: 0.625rem;
  margin-top: 1.25rem;
  flex-wrap: wrap;
}

.listing-edit-form {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  background: var(--gray-50);
  padding: 1rem;
  border-radius: var(--radius-md);
  border: 1px solid var(--gray-200);
}

.listing-edit-form textarea {
  resize: vertical;
  min-height: 100px;
}

.listing-edit-actions {
  display: flex;
  gap: 0.625rem;
  justify-content: flex-end;
}

.listing-clarifications {
  margin-top: 1.25rem;
  padding-top: 1.25rem;
  border-top: 2px solid var(--gray-200);
}

.listing-clarifications h4 {
  margin: 0 0 0.875rem;
  font-size: 1rem;
  color: var(--gray-800);
  font-weight: 600;
}

.clarification-item {
  background: var(--gray-50);
  border-radius: var(--radius-md);
  padding: 1rem;
  margin-bottom: 0.875rem;
  border-left: 4px solid var(--gray-300);
  box-shadow: var(--shadow-sm);
}

.clarification-item.pending {
  border-left-color: var(--warning-500);
  background: var(--warning-50);
}

.clarification-item.answered {
  border-left-color: var(--success-500);
  background: var(--success-50);
}

.clarification-question {
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.625rem;
  margin-bottom: 0.5rem;
  color: var(--gray-800);
}

.clarification-badge {
  background: var(--warning-500);
  color: white;
  font-size: 0.6875rem;
  padding: 0.25rem 0.625rem;
  border-radius: var(--radius-xl);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.clarification-answer {
  color: var(--gray-700);
  font-size: 0.9375rem;
  line-height: 1.6;
}

.clarification-form {
  display: flex;
  gap: 0.625rem;
  margin-top: 0.75rem;
}

.clarification-form input {
  flex: 1;
}

.score-bar {
  background: var(--gray-200);
  border-radius: var(--radius-xl);
  height: 28px;
  position: relative;
  margin-bottom: 1rem;
  overflow: hidden;
  box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.06);
}

.score-fill {
  background: linear-gradient(90deg, var(--success-600), var(--success-500));
  height: 100%;
  border-radius: var(--radius-xl);
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.3);
}

.score-value {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  font-weight: 700;
  font-size: 0.875rem;
  color: var(--gray-700);
}

.rationale {
  color: var(--gray-700);
  font-size: 0.9375rem;
  line-height: 1.7;
  padding: 0.75rem;
  background: var(--gray-50);
  border-radius: var(--radius-md);
  border-left: 3px solid var(--primary-400);
}

.btn-remove {
  background: var(--danger-50);
  color: var(--danger-600);
  border: 1px solid var(--danger-200);
  width: 100%;
  margin-top: 1.25rem;
  font-weight: 500;
}

.btn-remove:hover:not(:disabled) {
  background: var(--danger-100);
  border-color: var(--danger-300);
}

/* ============================================
   Chat Section - Modern Bubble UI
   ============================================ */
.chat-section {
  background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%);
  padding: 1.5rem;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  display: flex;
  flex-direction: column;
  height: fit-content;
  max-height: calc(100vh - 200px);
  border: 1px solid #334155;
}

.chat-section h2 {
  color: white;
}

.clarification-notice {
  background: rgba(251, 191, 36, 0.15);
  border: 1px solid rgba(251, 191, 36, 0.3);
  color: #fbbf24;
  padding: 0.875rem 1rem;
  border-radius: var(--radius-md);
  margin-bottom: 1rem;
  font-size: 0.875rem;
  font-weight: 500;
  border-left: 3px solid #fbbf24;
  backdrop-filter: blur(10px);
}

.messages-container {
  flex: 1;
  overflow-y: auto;
  margin: 1rem 0;
  max-height: 500px;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  padding: 0.5rem;
}

.messages-container::-webkit-scrollbar {
  width: 8px;
}

.messages-container::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: var(--radius);
}

.messages-container::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius);
}

.messages-container::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

.message {
  padding: 0.875rem 1.125rem;
  border-radius: 1.125rem;
  max-width: 80%;
  animation: messageSlide 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  word-wrap: break-word;
  position: relative;
}

@keyframes messageSlide {
  from {
    opacity: 0;
    transform: translateY(8px) scale(0.98);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.message.user {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  align-self: flex-end;
  border-radius: 1.125rem 1.125rem 0.25rem 1.125rem;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  margin-left: auto;
}

.message.agent {
  background: rgba(255, 255, 255, 0.95);
  color: var(--gray-900);
  align-self: flex-start;
  border-radius: 1.125rem 1.125rem 1.125rem 0.25rem;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  margin-right: auto;
}

.message-sender {
  font-weight: 700;
  font-size: 0.6875rem;
  margin-bottom: 0.375rem;
  text-transform: uppercase;
  letter-spacing: 0.075em;
  opacity: 0.85;
}

.message.user .message-sender {
  color: rgba(255, 255, 255, 0.85);
}

.message.agent .message-sender {
  color: var(--primary-600);
}

.message-text {
  line-height: 1.5;
  font-size: 0.9375rem;
}

.message.user .message-text {
  color: white;
}

.message.agent .message-text {
  color: var(--gray-800);
}

.question-badge {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
  padding: 0.375rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.6875rem;
  display: inline-block;
  margin-top: 0.5rem;
  font-weight: 700;
  box-shadow: 0 2px 8px rgba(245, 158, 11, 0.3);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.message-form {
  display: flex;
  gap: 0.75rem;
  margin-top: auto;
  padding-top: 1rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.message-form input {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
  padding: 0.875rem 1.125rem;
  border-radius: var(--radius-lg);
  font-size: 0.9375rem;
  transition: var(--transition);
  backdrop-filter: blur(10px);
}

.message-form input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.message-form input:focus {
  outline: none;
  background: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.4);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
}

.message-form input:hover {
  border-color: rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.12);
}

.message-form button {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  border: none;
  padding: 0.875rem 1.5rem;
  font-weight: 600;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
}

.message-form button:hover:not(:disabled) {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  transform: translateY(-1px);
  box-shadow: 0 6px 16px rgba(37, 99, 235, 0.5);
}

.message-form button:active:not(:disabled) {
  transform: translateY(0);
}

/* ============================================
   Animations & Utilities
   ============================================ */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

.slide-down {
  animation: slideDown 0.3s ease-out;
}

/* ============================================
   Responsive Design
   ============================================ */
@media (max-width: 768px) {
  .page-content {
    padding: 1rem;
  }

  .session-content {
    padding: 1rem;
    gap: 1rem;
  }

  .auth-container {
    padding: 2rem 1.5rem;
  }

  .page-header {
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }

  .user-info {
    width: 100%;
    justify-content: space-between;
  }
}
